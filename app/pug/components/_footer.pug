    {class: 'instagram', href: 'https://www.instagram.com/exeed_38/', image: 'img/sprite.svg#instagram' },
    { class: 'vkontakte', href: 'https://vk.com/cheryexeed38', image: 'img/sprite.svg#vkontakte' },
