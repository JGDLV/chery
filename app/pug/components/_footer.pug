footer.footer
  .footer__top
    .container
      .footer__top-inner.flex
          include header/logo.pug
          include header/tagline.pug
          .menu
            ul.menu-items.flex
              each item, index in header.menu
                li.menu__item
                  a.menu__link(href=item.href) !{item.text}
  .footer__middle
    .container
      .footer__middle-inner.flex
        .footer__phone
            .footer__title Телефон:
            a.footer__phone-link(href='tel:+' + clearPhone(header.phone)) !{header.phone}
        .footer__address
          .footer__title Адрес салона:
          p.footer__address-text !{header.address}
        .social
          .social-items.flex
            each item in social
              a.social__item(class='social__item_' + item.class href=item.href target="_blank")
                svg.social__item-image
                  use(xlink:href=item.image)
  .footer__bottom
    .container
      .footer__bottom-inner.flex.aic
        p.copyright © 2021  АО «Чери Автомобили Рус»
        a.law-info(href='#') Юридическая информация
